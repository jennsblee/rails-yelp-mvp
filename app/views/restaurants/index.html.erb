<h1>Restaurants</h1>

<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item"><strong><%= link_to restaurant.name, restaurant_path(restaurant) %></strong> (<%= restaurant.category %>) - <%= restaurant.address %></li>
  <% end %>
</ul>
<br>
<%= link_to 'Add a new restaurant', new_restaurant_path %>
